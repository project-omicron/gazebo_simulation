<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- cartographer slam -->
  <arg name="carto_mapping" default="0"/>
  <arg name="carto_localization" default="0"/>
  <arg name="load_state_filename" default=""/>


  <!-- Robot pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0.13"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- Launch other relevant files-->
  <include file="$(find gazebo_simulation)/launch/robot_description.launch"/>

  <!-- World File -->
  <!-- We can put here any world we want -->
  <arg name="world_file" default="$(find gazebo_simulation)/worlds/labyrinth.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <!-- Spawn My Robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -param robot_description -model gazebo_simulation 
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>

  <!--launch rviz-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find gazebo_simulation)/rviz/mapping.rviz"/>

  <!-- slam -->
  <group if="$(arg carto_mapping)">
    <include file="$(find gazebo_simulation)/launch/carto_slam_online_mapping.launch"/>
  </group>

  <group if="$(arg carto_localization)">
    <include file="$(find gazebo_simulation)/launch/carto_slam_online_localization.launch">
      <arg name="load_state_filename" value="$(arg load_state_filename)"/>
    </include>
  </group>


</launch>
