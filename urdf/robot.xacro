<?xml version='1.0'?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find gazebo_simulation)/urdf/robot.gazebo" />

  <gazebo reference="chassis">
    <material>Gazebo/RedBright</material>
  </gazebo>

  <gazebo reference="chassis2">
    <material>Gazebo/RedBright</material>
  </gazebo>

  <gazebo reference="robot_lidar_platform">
    <material>Gazebo/RedBright</material>
  </gazebo>

  <gazebo reference="left_wheel_front">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel_front">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="left_wheel_back">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel_back">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- ROBOT description -->
  <link name="robot_footprint"></link>

  <!--
    KUKA youBot dimentions
    https://www.expo21xx.com/industrial-robots/20317_st3_mobile-robot-research/default.htm
  -->

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".580 .210 .110"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".580 .210 .110"/>
      </geometry>
    </visual>
  </link>

  <joint name="robot_footprint_joint2" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="chassis2" />
  </joint>

  <link name='chassis2'>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision2'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".370 .380 .110"/>
      </geometry>
    </collision>

    <visual name='chassis2_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".370 .380 .110"/>
      </geometry>
    </visual>
  </link>

  <joint name="robot_lidar_platform_joint" type="fixed">
    <origin xyz="0.32 0 -0.05" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="robot_lidar_platform" />
  </joint>

  <link name='robot_lidar_platform'>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision2'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".12 .10 .01"/>
      </geometry>
    </collision>

    <visual name='chassis2_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".12 .10 .01"/>
      </geometry>
    </visual>
  </link>

  <!--
  Wheel: 
    radius: 50mm
    length: 76mm
    mass: 500gr. 
  -->

  <!-- Left wheel front -->
  <link name='left_wheel_front'>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_front_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_front_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5705 1.5707"/>
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_front_hinge">
    <origin xyz="0.25 0.15 -0.03" rpy="0 0 0"/>
    <child link="left_wheel_front"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Left wheel back -->
  <link name='left_wheel_back'>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_back_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_back_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5705 1.5707"/>
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_back_hinge">
    <origin xyz="-0.25 0.15 -0.03" rpy="0 0 0"/>
    <child link="left_wheel_back"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Right wheel front -->
  <link name='right_wheel_front'>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_front_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_front_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5705 1.5707"/>
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="right_wheel_front_hinge">
    <origin xyz="0.25 -0.15 -0.03" rpy="0 0 0"/>
    <child link="right_wheel_front"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Right wheel back -->
  <link name='right_wheel_back'>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_back_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_back_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5705 1.5707"/>
      <geometry>
        <cylinder length="0.076" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="right_wheel_back_hinge">
    <origin xyz="-0.25 -0.15 -0.03" rpy="0 0 0"/>
    <child link="right_wheel_back"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>  


  <!-- LIDAR -->
  <link name="hokuyo"> 
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://gazebo_simulation/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.34 0 -0.0099" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>


  <!-- IMU -->
  <link name="imu_link">
    <inertial>
      <mass value="0.001"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".001 .001 .001"/>
      </geometry>
    </collision>
  </link>

  <joint name="imu_joint" type="fixed">
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 0.19"/>
    <parent link="chassis"/>
    <child link="imu_link"/>
  </joint>

  <!-- Import macro for realsense-RS200 camera-->
  <xacro:include filename="$(find gazebo_simulation)/urdf/realsense-RS200.macro.xacro"/>
  <!-- Create camera instance -->
  <xacro:realsense-rs200 prefix="" parent="chassis">
    <origin xyz="0.285 0 .065" rpy="0 0 0" />
  </xacro:realsense-rs200>

</robot>
